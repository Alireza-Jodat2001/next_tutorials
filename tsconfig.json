{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    // "baseUrl": "/",
    "target": "ES2017",
    "module": "esnext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": { "@/*": ["./*"] }, // "@/styles/": ["styles/*"]
    "moduleResolution": "bundler",
    "plugins": [{ "name": "next" }],
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
